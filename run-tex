#!/bin/bash

rubber --clean main-doc

rm *.ist* *.pdf* *.mtc* *.xml *.maf *.ist *.glg *.glo *.gls *.slg *.syg *.syi *-blx.bib*

pdflatex --synctex=1 main-doc.tex
pdflatex --synctex=1 main-doc.tex
pdflatex --synctex=1 main-doc.tex
bibtex main-doc
makeglossaries main-doc
pdflatex --synctex=1 main-doc.tex
pdflatex --synctex=1 main-doc.tex
pdflatex --synctex=1 main-doc.tex

# chmod +x run-tex
# ./run-tex
